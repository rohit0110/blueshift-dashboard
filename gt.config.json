{
    "defaultLocale": "en",
    "files": {
      "mdx": {
        "include": [
          "src/app/content/challenges/**/[locale]/**/*.mdx",
          "src/app/content/courses/**/[locale].mdx"
        ]
      }
    },
    "locales": [
      "en",
      "fr",
      "de",
      "id",
      "uk",
      "vi",
      "zh-CN",
      "zh-HK"
    ],
    "options": {
      "docsUrlPattern": "/[locale]",
      "experimentalClearLocaleDirs": true,
      "experimentalLocalizeStaticUrls": true
    }
}